<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dpm.uavflightplanner.MainActivity" >

    <TextView
        android:id="@+id/textViewMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_main_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/activity_main_create_button" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCreate"
        android:layout_alignBottom="@+id/buttonCreate"
        android:layout_toRightOf="@+id/buttonCreate"
        android:text="@string/activity_main_edit_button" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonEdit"
        android:layout_alignBottom="@+id/buttonEdit"
        android:layout_toRightOf="@+id/buttonEdit"
        android:onClick="sendMessage"
        android:text="@string/activity_main_view_button" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonView"
        android:layout_alignParentRight="true"
        android:text="@string/activity_editflightplan_button_delete" />

    <ListView
        android:id="@+id/listViewFlightPlans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCreate"
        android:layout_below="@+id/textViewMainTitle"
        android:layout_centerHorizontal="true" >

    </ListView>

</RelativeLayout>
